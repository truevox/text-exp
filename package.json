{
  "name": "puffpuffpaste",
  "version": "0.88.0",
  "description": "Blow up your words! A powerful text expansion Chrome extension with multi-provider cloud sync and organizational snippet management",
  "type": "module",
  "scripts": {
    "dev": "vite build --mode development --watch",
    "dev:extension": "node scripts/dev-extension.js",
    "build": "node scripts/sync-version.js && vite build --mode production && node build-content-script.js",
    "build:dev": "node scripts/sync-version.js && vite build --mode development && vite build --mode development --config vite.content.config.ts",
    "preview": "vite preview",
    "test": "jest",
    "test:e2e": "playwright test",
    "test:watch": "jest --watch",
    "lint": "eslint . --ext .js,.ts,.tsx",
    "lint:fix": "eslint . --ext .js,.ts,.tsx --fix",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "type-check": "tsc --noEmit",
    "type-check:watch": "tsc --noEmit --watch",
    "version:bump": "node scripts/bump-version.js && npm run build",
    "version:feature": "node scripts/bump-version.js feature && npm run build",
    "version:fix": "node scripts/bump-version.js fix && npm run build",
    "clean": "rm -rf build dist",
    "clean:all": "rm -rf build dist node_modules && npm install",
    "validate": "npm run type-check && npm run lint && npm run format:check && npm run test",
    "prepare": "husky",
    "commit": "gitmoji -c"
  },
  "keywords": [
    "chrome-extension",
    "text-expander",
    "snippets",
    "collaboration",
    "productivity",
    "cloud-sync"
  ],
  "author": "Marvin Bentley II",
  "license": "MIT",
  "devDependencies": {
    "@playwright/test": "^1.53.2",
    "@types/chrome": "^0.0.246",
    "@types/jest": "^29.5.14",
    "@types/node": "^20.6.0",
    "@typescript-eslint/eslint-plugin": "^6.7.0",
    "@typescript-eslint/parser": "^6.7.0",
    "@vitejs/plugin-react": "^4.1.0",
    "crx": "^5.0.1",
    "eslint": "^8.49.0",
    "fast-glob": "^3.3.1",
    "gitmoji-cli": "^9.7.0",
    "husky": "^9.1.7",
    "jest": "^29.7.0",
    "jest-environment-jsdom": "^30.0.2",
    "jsdom": "^26.1.0",
    "playwright": "^1.38.0",
    "prettier": "^3.0.3",
    "rollup": "^3.29.4",
    "terser": "^5.43.1",
    "ts-jest": "^29.4.0",
    "typescript": "^5.2.2",
    "vite": "^4.4.9",
    "vite-plugin-static-copy": "^0.17.0",
    "webext-bridge": "^6.0.1"
  },
  "dependencies": {
    "@types/dompurify": "^3.0.5",
    "@types/js-yaml": "^4.0.9",
    "@types/ws": "^8.18.1",
    "dompurify": "^3.2.6",
    "js-yaml": "^4.1.0",
    "tinymce": "^7.9.1",
    "tslib": "^2.8.1",
    "ws": "^8.18.3"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}
